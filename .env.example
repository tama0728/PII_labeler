# =============================================
# PII Labeler - Environment Configuration Template
# =============================================
# Copy this file to .env and modify the values as needed

# Django Backend Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production

# Allowed Hosts (comma separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================
# Database Configuration (PostgreSQL)
# =============================================
DB_NAME=pii_labeler_db
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5433

# =============================================
# Service Ports (Frontend/Backend Separation)
# =============================================
# Change these ports if they conflict with other services
FRONTEND_PORT=8000
BACKEND_PORT=8008

# =============================================
# Time Zone & Language
# =============================================
TIME_ZONE=Asia/Seoul
LANGUAGE_CODE=ko-kr

# =============================================
# Logging Configuration
# =============================================
LOG_LEVEL=INFO

# =============================================
# Email Configuration (Optional)
# =============================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# =============================================
# Production Security Settings (Uncomment for production)
# =============================================
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# SECURE_BROWSER_XSS_FILTER=True

# =============================================
# Static & Media Files (Production)
# =============================================
# STATIC_ROOT=/path/to/static/files
# MEDIA_ROOT=/path/to/media/files

# =============================================
# CORS Settings (If needed for API)
# =============================================
# CORS_ALLOW_ALL_ORIGINS=False
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000


# Dhango admin setting
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123